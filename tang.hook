#! /bin/bash

set -e

echo "Hello world"

mkdir -p gopath/src
ln -s $PWD gopath/src/tang

echo "Installing..."
GOPATH=$PWD/gopath go install tang

# Must delete old binary before replacing it
ORIGBIN=${GOPATH-~/.local}/bin
mv $ORIGBIN $ORIGBIN.old
cp $PWD/gopath/bin/tang $ORIGBIN

echo "Sending HUP"
pkill -HUP tang
